#include "base/streamlogger.hpp"

library base;

namespace icinga
{

class FileLogger : StreamLogger
{
	activation_priority -100;

	[config, required] String path;
	[config] int max_size {
		default {{{
			// Fits gzipped into a 5MB email attachment.
			return 100 * 1024 * 1024;
		}}}
	};
	[config] int keep_rotations {
		default {{{ return 7; }}}
	};
};

}
